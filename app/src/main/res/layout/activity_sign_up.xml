<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="30sp"
             android:text="@string/welcome_sign_up"
                android:textColor="@color/colorApp"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30sp"
                android:src="@drawable/test_logo" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="20sp">

            <EditText
                android:id="@+id/fullNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:drawableEnd="@drawable/ic_person"
                android:drawableTint="@color/colorApp"
                android:hint="Full Name"
                android:inputType="text"
                android:textColor="@color/colorApp"
                android:textSize="15sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/emailSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/colorApp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorApp"
                android:textSize="15sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/cinSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_cin"
                android:drawableTint="@color/colorApp"
                android:hint="CIN"
                android:inputType="number"
                android:textColor="@color/colorApp"
                android:textSize="15sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/phoneNumberSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_phone"
                android:drawableTint="@color/colorApp"
                android:hint="Phone Number"
                android:inputType="number"
                android:textColor="@color/colorApp"
                android:textSize="15sp"
                android:textStyle="italic" />

            <EditText
            android:id="@+id/passwordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/colorApp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/colorApp"
                android:textSize="15sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/confirmPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/colorApp"
                android:hint="Confirme_Password"
                android:inputType="textPassword"
                android:textColor="@color/colorApp"
                android:textSize="15sp"
                android:textStyle="italic" />


        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorApp"
            android:text="Sign UP"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/gotoSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Already have an account"
            android:textColor="@color/colorApp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_gravity="center"/>

    </LinearLayout>


</ScrollView>